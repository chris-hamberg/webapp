<!-- macro for the carousel -->
{% macro make_slide(namedtuple) -%}
    {% if namedtuple.plot %}
    {% set target = url_for("data", filename=namedtuple.plot) %}
    <img onclick="source(this)" class="theorem" id="theorem" src="{{ target }}">
    {% endif %}
    {% set target = url_for("data", filename=namedtuple.theorem) %}
    <img onclick="source(this)" class="theorem" id="theorem" src="{{ target }}">
{%- endmacro %}

{% macro Carousel() -%}
<!-- begin Bootstrap Carousel -->
<div id='myCarousel' class='carousel slide' data-ride='carousel' data-interval='5200'>
    <!-- Wrapper for slides -->
    <div class='carousel-inner' role='listbox'>
        {% for namedtuple in data %}
            {% if namedtuple == data[0] %}
                <div class="item active">
            {% else %}
                <div class="item">
            {% endif %}
            {{ make_slide(namedtuple) }}
                </div>
        {% endfor %}
    </div>
    <!-- Controls -->
    <a class='left carousel-control' href='#myCarousel' role='button' data-slide='prev'>
        <span class='glyphicon glyphicon-chevron-left' aria-hidden='true'></span>
        <span class='sr-only'>Previous</span>
    </a>
    <a class='right carousel-control' href='#myCarousel' role='button' data-slide='next'>
        <span class='glyphicon glyphicon-chevron-right' aria-hidden='true'></span>
        <span class='sr-only'>Next</span>
    </a>
</div>
{%- endmacro %}
